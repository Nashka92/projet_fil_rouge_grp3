{% extends 'base.html.twig' %}

{% block title %}New Task{% endblock %}

{% block stylesheets %}

<style>
    input, textarea, select{
        display: block;
    width: 100%;
}
</style>

{% endblock %}
{% block body %}
  <div class="position-absolute top-50 start-50 translate-middle">
  <div class="card">
    <h1>Creer une nouvelle tache</h1>

    {{ include('task/_form.html.twig') }}

</div>
</div>
    <!-- Button trigger modal -->
    
<button type="button" id='bouton_modal' class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Creer un nouveau client
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Creer un nouveau client</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{ include('task/_form2.html.twig') }}
      </div>
      
    </div>
  </div>
</div>
{% endblock %}

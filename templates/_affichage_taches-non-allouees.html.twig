


{% block body %}


	<div class="row">
		<h1>taches non assignées</h1>

			{% for message in app.flashes('failed') %}
				<div class="flash-notice">
					<div class="alert alert-danger alert-dismissible" role="alert">
						<button type="button" class="btn" data-dismiss="alert">
							<span aria-hidden="true">&times;</span>
							<span class="sr-only"></span>
						</button>&nbsp&nbsp&nbsp{{ message }}
				</div>
				</div>
			{% endfor %}

			{% for message in app.flashes('success') %}
				<div class="flash-notice">
					<div class="alert alert-success alert-dismissible" role="alert">
						<button type="button" class="btn" data-dismiss="alert">
							<span aria-hidden="true">&times;</span>
							<span class="sr-only"></span>
						</button>&nbsp&nbsp&nbsp{{ message }}
					</div>
				</div>
			{% endfor %}


		{% for user in tasks|filter(user => user.user == NULL) %}

			<div class="card text-dark bg-light m-5" style="max-width: 18rem;">
				<div class="card-header">tâche n°
					{{ (user.id) }}</div>
				<div class="card-body">
					<h5 class="card-title">Description:
					</h5>
					<p class="card-text">{{ (user.description) }}</p>
				</div>

				<div class="footer mb-3">
					<a href="{{ path('app_task_alloueTask', { 'id': user.id }) }}" id ="prendre" type="button" class="btn btn-primary">Alloué</a>

				</div>
			</div>

		{% endfor %}
		
	</div>

	

{% endblock %}
